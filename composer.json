{
   "name": "codeflow-hub/logger",
   "type": "library",
   "description": "Sistema enterprise de logs PSR-3 compliant com suporte a múltiplos handlers (arquivo, email, Telegram). Wrapper para Monolog com contexto estruturado e sanitização automática de dados sensíveis.",
   "keywords": [
      "logging",
      "psr-3",
      "monolog",
      "email",
      "telegram",
      "enterprise",
      "security"
   ],
   "license": "MIT",
   "authors": [
      {
         "name": "CodeFlow-Hub",
         "email": "contato@codeflow.com.br",
         "homepage": "https://github.com/codeflow-hub"
      }
   ],
   "minimum-stability": "stable",
   "require": {
      "php": ">=7.4",
      "monolog/monolog": "^2.0|^3.0"
   },
   "require-dev": {
      "phpunit/phpunit": "^9.0|^10.0",
      "phpstan/phpstan": "^1.0",
      "squizlabs/php_codesniffer": "^3.0"
   },
   "autoload": {
      "psr-4": {
         "CodeFlowHub\\": "src/"
      },
      "files": [
         "src/helpers.php"
      ]
   },
   "autoload-dev": {
      "psr-4": {
         "CodeFlowHub\\Tests\\": "tests/"
      }
   },
   "scripts": {
      "test": "phpunit",
      "test-coverage": "phpunit --coverage-html coverage",
      "phpstan": "phpstan analyse src --level=7",
      "cs-check": "phpcs",
      "cs-fix": "phpcbf",
      "quality": [
         "@cs-check",
         "@phpstan",
         "@test"
      ]
   },
   "config": {
      "sort-packages": true,
      "allow-plugins": {
         "composer/package-versions-deprecated": true
      }
   },
   "extra": {
      "branch-alias": {
         "dev-main": "1.0-dev"
      }
   }
}