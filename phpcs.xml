<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="CodeFlow Logger Coding Standard">
    <description>Coding standard para o CodeFlow Logger</description>

    <!-- Usar PSR-12 como base -->
    <rule ref="PSR12"/>

    <!-- Verificar apenas arquivos PHP -->
    <arg name="extensions" value="php"/>
    
    <!-- Mostrar progresso -->
    <arg value="sp"/>
    
    <!-- Usar cores quando possível -->
    <arg name="colors"/>

    <!-- Diretórios a serem verificados -->
    <file>src</file>
    <file>tests</file>

    <!-- Excluir vendor e outras pastas -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>build/*</exclude-pattern>
    <exclude-pattern>logs/*</exclude-pattern>

    <!-- Configurações específicas -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Permitir linhas longas em comentários de documentação -->
    <rule ref="Generic.Files.LineLength.TooLong">
        <exclude-pattern>*\.php</exclude-pattern>
    </rule>

    <!-- Configurar indentação -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="3"/>
            <property name="tabIndent" value="false"/>
        </properties>
    </rule>
</ruleset>